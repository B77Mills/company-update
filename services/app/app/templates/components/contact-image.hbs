{{#file-upload
  class="d-block"
  name="image"
  for="upload-image"
  accept="image/*"
  multiple=false
  onfileadd=(action "upload")
  as |queue|
}}
  <a class="btn btn-block btn-sm btn-primary text-white upload-button">
    {{#if queue.files.firstObject}}
      {{entypo-icon "hour-glass"}} Uploading...
    {{else}}
      {{entypo-icon "upload"}} Upload new image
    {{/if}}
  </a>
{{/file-upload}}

{{#if image}}
  <img src={{ image }} class="img-fluid mt-1" alt="Contact Image">
{{/if}}
