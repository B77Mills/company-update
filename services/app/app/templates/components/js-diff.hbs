{{#if showDiff}}
  {{#each diffs as |diff|}}
    {{#if diff.added}}
      {{display-diff diff=diff tagName="ins"}}
    {{else if diff.removed}}
      {{display-diff diff=diff tagName="del"}}
    {{else}}
      {{display-diff diff=diff}}&nbsp;
    {{/if}}
  {{/each}}
{{else}}
  {{display-diff diff=(hash value=original)}}&nbsp;
{{/if}}
