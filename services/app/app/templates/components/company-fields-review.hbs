{{#each fields as |row|}}
  <div class="row">
    {{#each row as |field|}}
      <div class="col {{ field.class }}">
        <div class="form-group">
          <label for="{{ field.key }}-input">{{ field.label }}</label>
          <div class="input-group">
            {{#if (eq field.type "long")}}
              <div class="form-control {{ if (eq (get company field.key) (get submission.payload field.key)) "text-muted" "field-modified" }} copyable-textarea">
                {{ froala-editor content=(get submission.payload field.key) options=options }}
              </div>
            {{else}}
              <div readonly class="form-control form-control-plaintext {{ if (eq (get company field.key) (get submission.payload field.key)) "text-muted" "field-modified" }}">
                {{ get submission.payload field.key }}
              </div>
            {{/if}}
            {{#if (eq (get company field.key) (get submission.payload field.key))}}
            {{else}}
              {{ copyable-text value=(get submission.payload field.key)}}
            {{/if}}
          </div>
          <small id="{{ field.key }}-help" class="form-text text-muted">{{ field.helpText }}</small>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
