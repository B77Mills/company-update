<div class="card mb-4">
  <div class="card-body">
    <p class="lead">Review the requested changes below.</p>
    <p>For each field, either modify the submitted value, or select the toggle to ignore the field.</p>
    <p>When all fields have been reviewed, click the "Save Changes" at the bottom of the page to publish to Base.</p>
  </div>
</div>

<div class="row">
  <div class="col-12 col-lg-8 col-xl-9 my-3">
    {{!-- {{ company-fields-review fields=fields company=model.company submission=model.submission toggleField=(action "toggleField") payload=payload}} --}}
    {{review-card/details
      company=model.company
      submission=model.submission
      toggleField=(action "toggleField")
      payload=payload
    }}
    {{review-card/address
      company=model.company
      submission=model.submission
      toggleField=(action "toggleField")
      payload=payload
    }}
    {{review-card/contact
      company=model.company
      submission=model.submission
      toggleField=(action "toggleField")
      payload=payload
    }}
    {{review-card/social
      company=model.company
      submission=model.submission
      toggleField=(action "toggleField")
      payload=payload
    }}
    {{review-card/services
      company=model.company
      submission=model.submission
      toggleField=(action "toggleField")
      payload=payload
    }}
  </div>
  <div class="col-12 col-lg-4 col-xl-3 my-3">
    {{review-card/logo
      company=model.company
      submission=model.submission
      toggleField=(action "toggleField")
      payload=payload
    }}
  </div>
</div>

<div class="fixed-bottom fixed-right card">
  <div class="card">
    <div class="card-body text-center">
      {{#if model.submission.reviewed}}
        <p class="mb-2 text-muted small">This submission has already been reviewed.</p>
      {{/if}}
      {{confirm-button
        icon="check"
        label="Publish"
        runningLabel="Publishing..."
        class="btn-primary mr-1"
        iconClass="mr-1"
        disabled=isDisabled
        isRunning=isPublishing
        onConfirm=(action "publish")
      }}
      {{confirm-button
        icon="cross"
        label="Discard"
        runningLabel="Discarding..."
        class="btn-danger mr-1"
        iconClass="mr-1"
        disabled=isDisabled
        isRunning=isDiscarding
        onConfirm=(action "discard")
      }}
    </div>
  </div>
</div>
