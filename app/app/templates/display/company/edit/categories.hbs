{{#bs-modal size="large" show=true onHidden=(action "transitionToEdit") as |modal|}}
  <form {{action "save" on="submit"}}>
    {{#modal.header}}
      <h5 class="modal-title">Edit Categories</h5>
      <button {{action modal.actions.hide}}
        type="button"
        class="close"
        aria-label="Close"
      >
        {{entypo-icon "cross"}}
      </button>
    {{/modal.header}}

    {{#modal.body}}
      <div class="row">
        <div class="col">
          jsTree {{ log sections }}
        </div>
      </div>
    {{/modal.body}}

    {{#modal.footer}}
      <button class="btn btn-success" type="submit">
        {{entypo-icon "check"}} Done
      </button>
    {{/modal.footer}}
  </form>
{{/bs-modal}}
